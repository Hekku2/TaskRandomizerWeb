@page
@model Frontend.Pages.Session.LobbyModel
@{
    ViewData["Title"] = "Lobby";
}

<h2>Lobby</h2>

@section PageContentScripts {
    <script type="text/javascript">
        ko.applyBindings(new LobbyPage('@Model.Id'));
    </script>
}

<form data-bind="with: session">
    <div class="form-group">
        <label>Game</label>
        <p class="form-control-static" data-bind="text: gameName"></p>
    </div>

    <ul data-bind="foreach: players">
        <li data-bind="text: name"></li>
    </ul>

    
</form>

<label>Events</label>
<!-- TODO: This should actually display different information depending on event type.-->
<ul data-bind="foreach: events">
    <li data-bind="text: eventType"></li>
</ul>