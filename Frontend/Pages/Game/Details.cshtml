@page "{id:long}"
@model Frontend.Pages.Game.DetailsModel
@{
    ViewData["Title"] = "Game Details";
}

@section PageContentScripts {
    <script type="text/javascript">
        ko.applyBindings(new GameDetailsPage(@Model.Id));
    </script>
}

<h1>@ViewData["Title"]</h1>

<form data-bind="with: model">
    <div class="form-group">
        <label>Name</label>
        <p class="form-control-static" data-bind="text: name"></p>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Description</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: errands">
            <tr>
                <td data-bind="text: description"></td>
            </tr>
        </tbody>
    </table>
</form>