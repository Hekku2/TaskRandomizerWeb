@page
@model Frontend.Pages.Errand.IndexModel
@{
    ViewData["Title"] = "Errands";
}

@section PageContentScripts {
    <script type="text/javascript">
        ko.applyBindings(new ErrandListPage());
    </script>
}

<h1>@ViewData["Title"]</h1>

<div class="well-sm">This page lists all errands.</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Description</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: errands">
        <tr>
            <td data-bind="text: description"></td>
        </tr>
    </tbody>
</table>